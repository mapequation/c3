{
  "compilerOptions": {
    "allowJs": false,
    "noImplicitAny": true,
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "exclude": ["src/docs", "node_modules"],
  "include": ["src/lib/**/*"]
}
